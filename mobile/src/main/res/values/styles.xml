<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Material.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="MainTheme" parent="AppTheme">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
    </style>

    <style name="BreakTheme" parent="AppTheme">
        <item name="android:colorPrimary">@color/secondary</item>
        <item name="android:colorPrimaryDark">@color/secondary_dark</item>
    </style>

    <style name="button">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/accent</item>
        <item name="android:elevation">@dimen/button_elevation</item>
    </style>

    <style name="info_area">
        <item name="android:background">@android:color/white</item>
    </style>
</resources>
