<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Material.NoActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="fab">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/ripple</item>
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:layout_width">@dimen/fab_size</item>
        <item name="android:layout_height">@dimen/fab_size</item>
        <item name="android:stateListAnimator">@anim/fab</item>
    </style>

    <style name="pomodoro_panel">
    </style>

    <style name="info_area">
        <item name="android:background">@android:color/white</item>
    </style>
</resources>
