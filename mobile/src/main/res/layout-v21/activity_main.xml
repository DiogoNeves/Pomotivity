<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="?android:colorPrimary"
             tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/pomodoro_panel"
        android:layout_alignParentStart="false"
        style="@style/info_area"
        android:id="@+id/info_area">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/last_action"
            android:id="@+id/last_action"
            android:layout_marginTop="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/stats"
            android:id="@+id/stats"
            android:layout_gravity="bottom|left"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/expanded_counter_height"
        android:layout_alignParentLeft="false"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="false"
        android:layout_marginTop="0dp"
        android:layout_alignParentRight="false"
        android:id="@+id/pomodoro_panel"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        style="@style/pomodoro_panel">

        <TextView
            android:id="@+id/current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_time"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="130sp"
            android:layout_gravity="center"
            android:typeface="monospace"/>

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/controls"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        tools:ignore="UselessParent"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:elevation="@dimen/button_elevation"
        android:baselineAligned="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignBottom="@+id/pomodoro_panel"
        android:layout_marginBottom="-26dp"
        android:clipChildren="false">

        <ImageButton
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:src="@android:drawable/ic_media_play"
            android:id="@+id/start_button"
            style="@style/fab"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stop_button"
            android:id="@+id/stop_button"
            android:clickable="true"
            style="@style/fab"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pause_button"
            android:id="@+id/pause_button"
            style="@style/fab"
            android:layout_alignParentTop="true"
            android:enabled="true"
            android:visibility="invisible"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resume_button"
            android:id="@+id/resume_button"
            style="@style/fab"
            android:layout_alignParentTop="true"
            android:visibility="invisible"/>
    </RelativeLayout>

</RelativeLayout>
